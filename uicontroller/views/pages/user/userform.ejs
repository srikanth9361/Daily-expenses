<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 30px;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #495057;
        }

        .form-container label {
            font-weight: 600;
            color: #495057;
        }

        .form-container button {
            width: 100%;
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .form-container button:hover {
            background-color: #0056b3;
        }

        .form-container .form-control {
            border-radius: 5px;
            box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.075);
        }

        .form-container .form-control:focus {
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
    </style>
</head>

<body>

    <div class="form-container">
        <h2>User Information</h2>

        <div class="mb-3 row">
            <label for="fullName" class="col-sm-3 col-form-label">Full Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="fullName" placeholder="Enter full name">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="gender" class="col-sm-3 col-form-label">Gender</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="gender" placeholder="Enter gender">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="email" class="col-sm-3 col-form-label">Email</label>
            <div class="col-sm-9">
                <input type="email" class="form-control" id="email" placeholder="Enter email address">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="userName" class="col-sm-3 col-form-label">User Name</label>
            <div class="col-sm-9">
                <input type="text" class="form-control" id="userName" placeholder="Enter username">
            </div>
        </div>

        <div class="mb-3 row">
            <label for="password" class="col-sm-3 col-form-label">Password</label>
            <div class="col-sm-9">
                <input type="password" class="form-control" id="password" placeholder="Enter password">
            </div>
        </div>


        <button onclick="saveOrUpdateUser()">Submit</button>
    </div>

    <script>
        var fullName = document.getElementById('fullName');
        var gender = document.getElementById('gender');
        var email = document.getElementById('email');
        var userName = document.getElementById('userName');
        var password = document.getElementById('password');
        var userId = <%= userId %>

        function saveOrUpdateUser() {
            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({
                "fullName": fullName.value,
                "gender": gender.value,
                "email": email.value,
                "userName": userName.value,
                "password": password.value
            });

            const requestOptions = {
                method: userId ? "PUT" : "POST",
                headers: myHeaders,
                body: raw,
                redirect: "follow"
            };

            let url = "http://localhost:1000/api/user"
            if (userId) {
                url += '/' + userId;
            }

            fetch(url, requestOptions)
                .then(() => window.location = '/user')
                .catch((error) => console.error(error));
        }

        if (userId) {
            getUserById(userId);
        }

        function getUserById(userId) {
            const requestOptions = {
                method: "GET",
            };

            fetch("http://localhost:1000/api/user/" + userId, requestOptions)
                .then((response) => response.json())
                .then((user) => {
                    console.log(user.fullName);
                    fullName.value = user.fullName;
                    gender.value = user.gender;
                    email.value = user.email;
                    userName.value = user.userName;
                    password.value = user.password;
                })
                .catch((error) => console.error(error));
        }
    </script>

</body>

</html>
