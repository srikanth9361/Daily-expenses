<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Generation</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container {
            max-width: 500px;
        }

        #otp-page,
        #otp-form-page {
            margin-top: 50px;
        }
    </style>
</head>

<body>
    <div class="container mt-5" id="otp-page">
        <h2 class="text-center">Generate OTP</h2>
        <form>
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" placeholder="Enter your email" required>
            </div>
            <button type="button" class="btn btn-primary btn-block" onclick="generateOtp()">Generate OTP</button>
        </form>
    </div>

    <div class="container mt-5" id="otp-form-page" style="display: none;">
        <h2 class="text-center">Verify OTP</h2>
        <form>
            <div class="form-group">
                <label for="otp">OTP</label>
                <input type="text" class="form-control" id="otp" placeholder="Enter OTP" required>
            </div>
            <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" class="form-control" id="newPassword" placeholder="Enter new password" required>
            </div>
            <div class="form-group">
                <label for="confirmPassword">Confirm Password</label>
                <input type="password" class="form-control" id="confirmPassword" placeholder="Confirm password" required>
            </div>
            <button type="button" class="btn btn-primary btn-block" onclick="verifyOtp()">Submit</button>
        </form>
    </div>

    <script>
        const emailDom = document.getElementById("email");
        const enteredOtp = document.getElementById("otp");
        const newPassword = document.getElementById("newPassword");
        const confirmPassword = document.getElementById("confirmPassword");

        function generateOtp() {
            const email = emailDom.value;
            if (!email) {
                alert("Please enter your email.");
                return;
            }

            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({ email });

            const requestOptions = {
                method: "POST",
                headers: myHeaders,
                body: raw,
                redirect: "follow"
            };

            fetch("http://localhost:1000/api/user/generateotp", requestOptions)
                .then((response) => response.json())
                .then((result) => {
                    console.log(result);
                    if (result.message === "OTP generated successfully") {
                        document.getElementById("otp-page").style.display = "none";
                        document.getElementById("otp-form-page").style.display = "block";
                        alert("OTP has been sent to your email. Please verify it.");
                    } else {
                        alert(result.message);
                    }
                })
                .catch((error) => {
                    console.error("Error:", error);
                    alert("An error occurred. Please try again.");
                });
        }
        function verifyOtp() {
            const otp = enteredOtp.value;
            const password = newPassword.value;
            const confirmPwd = confirmPassword.value;

            if (password !== confirmPwd) {
                alert("Passwords do not match.");
                return;
            }

            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({
                email: emailDom.value,
                otp,
                newPassword: password
            });

            const requestOptions = {
                method: "PUT",
                headers: myHeaders,
                body: raw,
                redirect: "follow"
            };

            fetch("http://localhost:1000/api/user/resetpassword", requestOptions)
                .then((response) => response.json())
                .then((result) => {
                    console.log(result);
                    if (result.message === "Password reset successfully.") {
                        alert("Your password has been reset successfully.");
                        document.getElementById("otp-form-page").style.display = "none";
                        document.getElementById("otp-page").style.display = "block";
                    } else {
                        alert(result.message);
                    }
                })
                .catch((error) => {
                    console.error( error);
                });
        }
    </script>
</body>

</html>
