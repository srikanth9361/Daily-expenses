<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Category Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .form-container {
            max-width: 600px;
            margin: 50px auto;
            background-color: white;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-container h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .btn-submit {
            width: 100%;
            padding: 10px;
            font-size: 16px;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="form-container">
            <h3>Category Form</h3>
            <div class="mb-3 row">
                <label for="categoryName" class="col-sm-3 col-form-label">Category Name</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="categoryName" placeholder="Enter category name" required>
                </div>
            </div>

            <input type="hidden" id="id" value="<%=id%>">
            <button onclick="saveOrUpdateCategory()" class="btn btn-primary  btn-sm">Submit</button>
        </div>
    </div>

    <script>
        var categoryName = document.getElementById('categoryName');
        var id = document.getElementById('id').value;

        function saveOrUpdateCategory() {
            const myHeaders = new Headers();
            myHeaders.append("Content-Type", "application/json");

            const raw = JSON.stringify({
                "categoryName": categoryName.value,
            });

            const requestOptions = {
                method: id ? "PUT" : "POST",
                headers: myHeaders,
                body: raw,
                redirect: "follow"
            };

            let url = "http://localhost:1000/api/category";
            if (id) {
                url += '/' + id;
            }

            fetch(url, requestOptions)
                .then(() => window.location = '/category')
                .catch((error) => console.error(error));
        }

        if (id) {
            getCategoryById(id);
        }

        function getCategoryById(id) {
            const requestOptions = {
                method: "GET",
            };
            console.log(id);
            fetch("http://localhost:1000/api/category/" + id, requestOptions)
                .then((response) => response.json())
                .then((category) => {
                    console.log(category.categoryName);
                    categoryName.value = category.categoryName;
                })
                .catch((error) => console.error(error));
        }
    </script>
</body>

</html>
